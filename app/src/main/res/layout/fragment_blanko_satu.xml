<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.skck.blanko.BlankoSatuFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F66E00"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ID_BlankoSatu_BtnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ISI BLANKO ONLINE"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ID_BlankoSatu_BtnBack"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar1"
            app:layout_constraintVertical_bias="1.0"
            tools:layout_editor_absoluteX="0dp">

            <Button
                android:id="@+id/ID_BlankoSatu_BtnLanjut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Lanjut"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ID_BlankoSatu_Telp" />

            <Button
                android:id="@+id/ID_BlankoSatu_BtnSimpan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="Simpan"
                app:layout_constraintEnd_toStartOf="@+id/ID_BlankoSatu_BtnLanjut"
                app:layout_constraintTop_toBottomOf="@+id/ID_BlankoSatu_Telp" />

            <EditText
                android:id="@+id/ID_BlankoSatu_NamaLengkap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_edittext"
                android:ems="10"
                android:inputType="textPersonName"
                android:padding="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView65"
                app:layout_constraintTop_toBottomOf="@+id/textView64" />

            <EditText
                android:id="@+id/ID_BlankoSatu_TempatLahir"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_edittext"
                android:ems="10"
                android:inputType="textPersonName"
                android:padding="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView66"
                app:layout_constraintTop_toBottomOf="@+id/ID_BlankoSatu_NamaLengkap" />

            <EditText
                android:id="@+id/ID_BlankoSatu_TanggalLahir"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_edittext"
                android:ems="10"
                android:focusable="false"
                android:inputType="textPersonName"
                android:padding="5dp"
                app:layout_constraintEnd_toStartOf="@+id/ID_BlankoSatu_BtnTanggalLahir"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/textView67"
                app:layout_constraintTop_toBottomOf="@+id/ID_BlankoSatu_TempatLahir" />

            <com.google.android.material.textfield.TextInputLayout

                android:id="@+id/editTextTextPersonName30"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView68"
                app:layout_constraintTop_toBottomOf="@+id/ID_BlankoSatu_TanggalLahir">

                <AutoCompleteTextView
                    android:id="@+id/ID_BlankoSatu_RgAgama"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:inputType="none"
                    android:text="-- Pilih Agama --" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:id="@+id/editTextTextPersonName31"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView69"
                app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName30">

                <AutoCompleteTextView
                    android:id="@+id/ID_BlankoSatu_EdtKebngsaan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:inputType="none"
                    android:text="Kebangsaan" />
            </com.google.android.material.textfield.TextInputLayout>

            <RadioGroup
                android:id="@+id/ID_BlankoSatu_JenisKelamin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toEndOf="@+id/textView70"
                app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName31">

                <RadioButton
                    android:id="@+id/Laki"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Laki-Laki" />

                <RadioButton
                    android:id="@+id/Perempuan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Perempuan" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/ID_BlankoSatu_Status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toEndOf="@+id/textView71"
                app:layout_constraintTop_toBottomOf="@+id/ID_BlankoSatu_JenisKelamin">

                <RadioButton
                    android:id="@+id/Kawin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Kawin" />

                <RadioButton
                    android:id="@+id/Tidak"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tidak Kawin" />
            </RadioGroup>

            <EditText
                android:id="@+id/ID_BlankoSatu_Pekerjaan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edittext"
                android:ems="10"
                android:inputType="textPersonName"
                android:padding="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView72"
                app:layout_constraintTop_toBottomOf="@+id/ID_BlankoSatu_Status" />

            <EditText
                android:id="@+id/ID_BlankoSatu_Alamat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_edittext"
                android:ems="10"
                android:inputType="textPersonName"
                android:padding="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView73"
                app:layout_constraintTop_toBottomOf="@+id/ID_BlankoSatu_Pekerjaan" />

            <EditText
                android:id="@+id/ID_BlankoSatu_KTP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_edittext"
                android:ems="10"
                android:inputType="textPersonName"
                android:padding="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView74"
                app:layout_constraintTop_toBottomOf="@+id/ID_BlankoSatu_Alamat" />

            <EditText
                android:id="@+id/ID_BlankoSatu_KK"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_edittext"
                android:ems="10"
                android:inputType="textPersonName"
                android:padding="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView75"
                app:layout_constraintTop_toBottomOf="@+id/ID_BlankoSatu_KTP" />

            <EditText
                android:id="@+id/ID_BlankoSatu_Telp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_edittext"
                android:ems="10"
                android:inputType="textPersonName"
                android:padding="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView76"
                app:layout_constraintTop_toBottomOf="@+id/ID_BlankoSatu_KK" />

            <TextView
                android:id="@+id/textView64"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data Pribadi"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView65"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Nama Lengkap"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/ID_BlankoSatu_NamaLengkap"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ID_BlankoSatu_NamaLengkap" />

            <TextView
                android:id="@+id/textView66"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Tempat Lahir"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/ID_BlankoSatu_TempatLahir"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ID_BlankoSatu_TempatLahir" />

            <TextView
                android:id="@+id/textView67"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Tanggal Lahir"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/ID_BlankoSatu_TanggalLahir"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ID_BlankoSatu_TanggalLahir" />

            <TextView
                android:id="@+id/textView68"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Agama"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/editTextTextPersonName30"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ID_BlankoSatu_TanggalLahir" />

            <TextView
                android:id="@+id/textView69"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Kebangsaan"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/editTextTextPersonName31"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/editTextTextPersonName31" />

            <TextView
                android:id="@+id/textView70"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Jenis Kelamin"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/ID_BlankoSatu_JenisKelamin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ID_BlankoSatu_JenisKelamin" />

            <TextView
                android:id="@+id/textView71"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/ID_BlankoSatu_Pekerjaan"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ID_BlankoSatu_Status" />

            <TextView
                android:id="@+id/textView72"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Pekerjaan"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/ID_BlankoSatu_Pekerjaan"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ID_BlankoSatu_Status" />

            <TextView
                android:id="@+id/textView73"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Alamat"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/ID_BlankoSatu_KTP"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ID_BlankoSatu_Alamat" />

            <TextView
                android:id="@+id/textView74"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="No. KTP"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/ID_BlankoSatu_KTP"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ID_BlankoSatu_KTP" />

            <TextView
                android:id="@+id/textView75"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="No. KK"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/ID_BlankoSatu_KK"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ID_BlankoSatu_KK" />

            <TextView
                android:id="@+id/textView76"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="No. Telephone/ HP"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/ID_BlankoSatu_Telp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ID_BlankoSatu_Telp" />

            <ImageView
                android:id="@+id/ID_BlankoSatu_BtnTanggalLahir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/ID_BlankoSatu_TanggalLahir"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ID_BlankoSatu_TanggalLahir"
                app:srcCompat="@drawable/ic_baseline_date_range_24" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>